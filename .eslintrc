{
    "env": {
        "node": true,
        "browser": true,
        "mocha": true,
		"es6": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "linebreak-style": ["error", "windows"],
        "quotes": ["error", "single"],
        "no-unused-vars": ["error", { "vars": "all", "args": "none" }],
		"no-console": "off",
        "strict": 2,
        "no-cond-assign": 2
    }
}
